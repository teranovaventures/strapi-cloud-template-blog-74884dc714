{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "dateTime": {
      "type": "date"
    },
    "location": {
      "type": "string"
    },
    "backgroundImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "shoppingListAttached": {
      "type": "boolean"
    },
    "groupAttached": {
      "type": "boolean"
    },
    "event_status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Active",
        "Completed"
      ]
    }
  }
}
